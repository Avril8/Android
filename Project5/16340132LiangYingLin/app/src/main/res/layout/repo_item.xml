<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        app:cardBackgroundColor = "#98ded3"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:contentPadding="5dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:id="@+id/title_list_github"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title_github_str"
                    android:text="项目名: "
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/title_github"
                    android:textSize="18dp"
                    android:text="test1"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/repo_id_str"
                android:text="项目id："
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_list_github"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/repo_id"
                android:text="10904378"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/title_list_github"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toRightOf="@id/repo_id_str"
                />

            <TextView
                android:id="@+id/issue_str"
                android:text="存在问题："
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/repo_id_str"
                />

            <TextView
                android:id="@+id/issue"
                android:textColor="#000000"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/issue_str"
                app:layout_constraintTop_toBottomOf="@id/repo_id"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/description_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="项目描述："
                android:textColor="#000000"
                app:layout_constraintTop_toBottomOf="@id/issue_str"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Mirror of cricos."
                android:textColor="#000000"
                app:layout_constraintLeft_toRightOf="@id/description_str"
                app:layout_constraintTop_toBottomOf="@id/issue_str" />

        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:background="#888888"
        />

</LinearLayout>
